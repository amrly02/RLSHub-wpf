<Window x:Class="RLSHub.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RLSHub"
        MinWidth="900" MinHeight="600"
        Width="1200" Height="750"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource ShellBackgroundBrush}">
    <Grid>
        <!-- Decorative ellipses (same as WinUI 3) -->
        <Canvas IsHitTestVisible="False">
            <Ellipse Width="420" Height="420" Fill="{StaticResource AccentBrush}" Opacity="0.18" Canvas.Left="-140" Canvas.Top="-160"/>
            <Ellipse Width="360" Height="360" Fill="#22B7FF" Opacity="0.14" Canvas.Left="820" Canvas.Top="-120"/>
            <Ellipse Width="520" Height="520" Fill="#FF4FD8" Opacity="0.12" Canvas.Left="520" Canvas.Top="520"/>
        </Canvas>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Top nav bar with sliding underline indicator -->
            <Border x:Name="NavBarBorder" Grid.Row="0" Background="#0D0E18" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="0,0,0,1" Padding="24,10,24,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Header (title + subtitle) -->
                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,32,0">
                        <TextBlock x:Name="HeaderTitle" Style="{StaticResource SectionHeaderTextStyle}" Text="Dashboard"/>
                        <TextBlock x:Name="HeaderSubtitle" Style="{StaticResource HeroSubtitleTextStyle}" Text="RLS Career Overhaul command center." Margin="0,2,0,0"/>
                    </StackPanel>
                    <!-- Nav items (WinUI 3 style: icon + text) -->
                    <StackPanel x:Name="NavButtonsPanel" Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <ToggleButton x:Name="NavDashboard" Style="{StaticResource NavToggleStyle}" Tag="dashboard" IsChecked="True" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="NavCarSwap" Style="{StaticResource NavToggleStyle}" Tag="carswap" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="CarSwap" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="NavUpdates" Style="{StaticResource NavToggleStyle}" Tag="updates" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Updates" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="NavSettings" Style="{StaticResource NavToggleStyle}" Tag="settings" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                        <ToggleButton x:Name="NavAbout" Style="{StaticResource NavToggleStyle}" Tag="about" Click="Nav_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="About" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>
                    <!-- Sliding accent underline (animates to selected tab) - only under nav column -->
                    <Border x:Name="NavIndicatorStrip" Grid.Row="1" Grid.Column="1" Height="2" HorizontalAlignment="Stretch" Margin="0">
                        <Border x:Name="NavIndicator" Height="2" HorizontalAlignment="Left" Background="{StaticResource AccentBrush}" VerticalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Content area with entrance transition (slide + fade like WinUI 3) -->
            <Grid x:Name="ContentHost" Grid.Row="1" ClipToBounds="True">
                <ContentControl x:Name="ContentFrame" Background="Transparent"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
