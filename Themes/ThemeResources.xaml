<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  EASINGS                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <CubicEase    x:Key="EaseOut"     EasingMode="EaseOut"/>
    <CubicEase    x:Key="EaseInOut"   EasingMode="EaseInOut"/>
    <BackEase     x:Key="EaseOutBack" EasingMode="EaseOut" Amplitude="0.25"/>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  COLOR PALETTE                                                 -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <!-- Shell -->
    <SolidColorBrush x:Key="ShellBackgroundBrush"    Color="#070707"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush"  Color="#0A0A0A"/>
    <SolidColorBrush x:Key="SidebarSeparatorBrush"   Color="#141414"/>

    <!-- Surfaces -->
    <SolidColorBrush x:Key="SurfaceBrush"            Color="#0F0F0F"/>
    <SolidColorBrush x:Key="SurfaceAltBrush"         Color="#161616"/>
    <SolidColorBrush x:Key="SurfaceBorderBrush"      Color="#1C1C1C"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush"             Color="#DC2626"/>
    <SolidColorBrush x:Key="AccentSoftBrush"         Color="#F87171"/>
    <SolidColorBrush x:Key="AccentDimBrush"          Color="#7F1D1D"/>
    <SolidColorBrush x:Key="AccentGlowBrush"         Color="#40DC2626"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush"        Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TextMutedBrush"          Color="#808080"/>
    <SolidColorBrush x:Key="TextDimBrush"            Color="#505050"/>

    <!-- Status -->
    <SolidColorBrush x:Key="BridgeRunningBrush"      Color="#22C55E"/>
    <SolidColorBrush x:Key="BridgeStoppedBrush"      Color="#DC2626"/>

    <!-- Hero gradient -->
    <LinearGradientBrush x:Key="HeroGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A0A0A" Offset="0"/>
        <GradientStop Color="#1A0808" Offset="0.35"/>
        <GradientStop Color="#7F1D1D" Offset="1"/>
    </LinearGradientBrush>

    <!-- Hero translucent controls -->
    <SolidColorBrush x:Key="HeroControlBackgroundBrush"  Color="#18FFFFFF"/>
    <SolidColorBrush x:Key="HeroControlBorderBrush"      Color="#28FFFFFF"/>
    <SolidColorBrush x:Key="HeroControlForegroundBrush"  Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeroControlMutedBrush"       Color="#D4D4D4"/>

    <!-- Glass cards -->
    <LinearGradientBrush x:Key="CardGlassBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#12FFFFFF" Offset="0"/>
        <GradientStop Color="#08FFFFFF" Offset="0.5"/>
        <GradientStop Color="#06FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="CardGlassBorderBrush"   Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="GlassHoverBorderBrush"  Color="#40FFFFFF"/>

    <!-- Background logos -->
    <SolidColorBrush x:Key="BgLogoAccentBrush"  Color="#12DC2626"/>
    <SolidColorBrush x:Key="BgLogoCyanBrush"    Color="#10DC2626"/>
    <SolidColorBrush x:Key="BgLogoPinkBrush"    Color="#15FFFFFF"/>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  TEXT STYLES                                                   -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="HeroTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"   Value="36"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    <Style x:Key="HeroSubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"   Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>
    <Style x:Key="SectionHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"   Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    <Style x:Key="CardTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"   Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    <Style x:Key="CardSubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"   Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  PRIMARY BUTTON  (accent, scale on hover/press)               -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style TargetType="Button">
        <Setter Property="Padding"         Value="18,10"/>
        <Setter Property="Background"      Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize"        Value="13"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10" Padding="{TemplateBinding Padding}" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.04" Duration="0:0:0.18" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.04" Duration="0:0:0.18" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="0.97" Duration="0:0:0.06"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="0.97" Duration="0:0:0.06"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.04" Duration="0:0:0.12" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.04" Duration="0:0:0.12" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  GHOST BUTTON  (glass outline, animated fill on hover)        -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="Padding"         Value="18,10"/>
        <Setter Property="Background"      Value="Transparent"/>
        <Setter Property="Foreground"      Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush"     Value="#22FFFFFF"/>
        <Setter Property="FontSize"        Value="13"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10" Padding="{TemplateBinding Padding}" RenderTransformOrigin="0.5,0.5">
                        <Border.Background>
                            <SolidColorBrush x:Name="borderBg" Color="Transparent"/>
                        </Border.Background>
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#38FFFFFF"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="borderBg" Storyboard.TargetProperty="Color" To="#0AFFFFFF" Duration="0:0:0.18" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.04" Duration="0:0:0.18" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.04" Duration="0:0:0.18" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="borderBg" Storyboard.TargetProperty="Color" To="Transparent" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="0.97" Duration="0:0:0.06"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="0.97" Duration="0:0:0.06"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.04" Duration="0:0:0.12" EasingFunction="{StaticResource EaseOut}"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.04" Duration="0:0:0.12" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  SIDEBAR NAV TOGGLE                                           -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="NavToggleStyle" TargetType="ToggleButton">
        <Setter Property="Padding"                    Value="16,11"/>
        <Setter Property="Background"                 Value="Transparent"/>
        <Setter Property="Foreground"                 Value="{StaticResource TextMutedBrush}"/>
        <Setter Property="BorderThickness"            Value="0"/>
        <Setter Property="Cursor"                     Value="Hand"/>
        <Setter Property="FontSize"                   Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="root" Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="8,1">
                        <Border.Background>
                            <SolidColorBrush x:Name="rootBg" Color="Transparent"/>
                        </Border.Background>
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="rootBg" Storyboard.TargetProperty="Color" To="#0CFFFFFF" Duration="0:0:0.15" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="rootBg" Storyboard.TargetProperty="Color" To="Transparent" Duration="0:0:0.2" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  GLASS CARDS                                                  -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- Static glass card (no hover) - for Updates, Settings, About -->
    <Style x:Key="TileCardStaticStyle" TargetType="Border">
        <Setter Property="Padding"          Value="20"/>
        <Setter Property="CornerRadius"     Value="16"/>
        <Setter Property="BorderThickness"  Value="1"/>
        <Setter Property="BorderBrush"      Value="{StaticResource CardGlassBorderBrush}"/>
        <Setter Property="Background"       Value="{StaticResource CardGlassBackgroundBrush}"/>
    </Style>

    <!-- Glass card with hover (CarSwap listing cards only) -->
    <Style x:Key="TileCardStyle" TargetType="Border" BasedOn="{StaticResource TileCardStaticStyle}">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#40FFFFFF"/>
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.008" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.008" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.28" EasingFunction="{StaticResource EaseOut}"/>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.28" EasingFunction="{StaticResource EaseOut}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PillCardStyle" TargetType="Border">
        <Setter Property="Padding"          Value="14"/>
        <Setter Property="CornerRadius"     Value="12"/>
        <Setter Property="BorderThickness"  Value="1"/>
        <Setter Property="BorderBrush"      Value="{StaticResource CardGlassBorderBrush}"/>
        <Setter Property="Background"       Value="{StaticResource CardGlassBackgroundBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  COMBOBOX  (dark surface)                                     -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="ComboBoxDarkStyle" TargetType="ComboBox">
        <Setter Property="Background"      Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground"      Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush"     Value="{StaticResource SurfaceBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding"         Value="10,8"/>
        <Setter Property="MinHeight"       Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton" Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press"
                                      Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentPresenter Grid.Column="0" Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}" ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                              HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                            <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{StaticResource TextMutedBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,4,0"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                            <Border Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="8" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                <ScrollViewer Margin="4,2" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  COMBOBOX  (hero / glass)                                     -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="ComboBoxHeroStyle" TargetType="ComboBox">
        <Setter Property="Background"      Value="{StaticResource HeroControlBackgroundBrush}"/>
        <Setter Property="Foreground"      Value="{StaticResource HeroControlForegroundBrush}"/>
        <Setter Property="BorderBrush"     Value="{StaticResource HeroControlBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding"         Value="10,8"/>
        <Setter Property="MinHeight"       Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press"
                                      Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentPresenter Grid.Column="0" Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}" ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                              HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                            <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{StaticResource HeroControlMutedBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <Popup Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                            <Border Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="8" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                <ScrollViewer Margin="4,2" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem (dark dropdown items) -->
    <Style x:Key="ComboBoxItemDarkStyle" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding"    Value="10,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  TEXTBOX  (hero / glass)                                      -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="TextBoxHeroStyle" TargetType="TextBox">
        <Setter Property="Background"               Value="{StaticResource HeroControlBackgroundBrush}"/>
        <Setter Property="Foreground"               Value="{StaticResource HeroControlForegroundBrush}"/>
        <Setter Property="BorderBrush"              Value="{StaticResource HeroControlBorderBrush}"/>
        <Setter Property="BorderThickness"          Value="1"/>
        <Setter Property="Padding"                  Value="10,6"/>
        <Setter Property="Height"                   Value="36"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CaretBrush"               Value="{StaticResource HeroControlForegroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  CHECKBOX  (hero / translucent — for HomePage)                -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="CheckBoxHeroStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource HeroControlForegroundBrush}"/>
        <Setter Property="FontSize"   Value="12"/>
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="checkBorder" Width="18" Height="18" CornerRadius="5" BorderBrush="{StaticResource HeroControlBorderBrush}" BorderThickness="1" Background="{StaticResource HeroControlBackgroundBrush}" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Path x:Name="checkMark" Data="M 0,5 L 3,8 L 8,0" Stroke="{StaticResource HeroControlForegroundBrush}" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                  StrokeDashArray="14, 1000" StrokeDashOffset="20"
                                  HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkBorder" Property="Background" Value="#40FFFFFF"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="checkMark" Storyboard.TargetProperty="StrokeDashOffset" From="20" To="0" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="checkMark" Storyboard.TargetProperty="StrokeDashOffset" From="0" To="20" Duration="0:0:0.15" EasingFunction="{StaticResource EaseInOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="checkBorder" Property="BorderBrush" Value="#80FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  CHECKBOX  (dark — standard checkbox for Updates page etc.)   -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="CheckBoxDarkStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize"   Value="12"/>
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="checkBorder" Width="18" Height="18" CornerRadius="5" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" Background="{StaticResource SurfaceBrush}" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Path x:Name="checkMark" Data="M 0,5 L 3,8 L 8,0" Stroke="{StaticResource AccentBrush}" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                  StrokeDashArray="14, 1000" StrokeDashOffset="20"
                                  HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="checkBorder" Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="checkMark" Storyboard.TargetProperty="StrokeDashOffset" From="20" To="0" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="checkMark" Storyboard.TargetProperty="StrokeDashOffset" From="0" To="20" Duration="0:0:0.15" EasingFunction="{StaticResource EaseInOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="checkBorder" Property="BorderBrush" Value="{StaticResource AccentSoftBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  TOGGLE SWITCH  (animated slide — for Settings page)          -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize"   Value="13"/>
        <Setter Property="Cursor"     Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border x:Name="track" Width="42" Height="24" CornerRadius="12" VerticalAlignment="Center" Margin="0,0,12,0">
                            <Border.Background>
                                <SolidColorBrush x:Name="trackBg" Color="#252525"/>
                            </Border.Background>
                            <Ellipse x:Name="thumb" Width="18" Height="18" HorizontalAlignment="Left" Margin="3,0,0,0">
                                <Ellipse.Fill>
                                    <SolidColorBrush x:Name="thumbFill" Color="#707070"/>
                                </Ellipse.Fill>
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="thumbTranslate" X="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbTranslate" Storyboard.TargetProperty="X" To="18" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOutBack}"/>
                                        <ColorAnimation  Storyboard.TargetName="trackBg"        Storyboard.TargetProperty="Color" To="#DC2626" Duration="0:0:0.2" EasingFunction="{StaticResource EaseOut}"/>
                                        <ColorAnimation  Storyboard.TargetName="thumbFill"      Storyboard.TargetProperty="Color" To="#FFFFFF" Duration="0:0:0.2" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbTranslate" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.22" EasingFunction="{StaticResource EaseOutBack}"/>
                                        <ColorAnimation  Storyboard.TargetName="trackBg"        Storyboard.TargetProperty="Color" To="#252525" Duration="0:0:0.2" EasingFunction="{StaticResource EaseOut}"/>
                                        <ColorAnimation  Storyboard.TargetName="thumbFill"      Storyboard.TargetProperty="Color" To="#707070" Duration="0:0:0.2" EasingFunction="{StaticResource EaseOut}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  SCROLLBAR  (slim, rounded, dark)                             -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="SlimScrollBarThumb" TargetType="Thumb">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border x:Name="bg" CornerRadius="3" MinHeight="20" MinWidth="20">
                        <Border.Background>
                            <SolidColorBrush x:Name="thumbBg" Color="#22FFFFFF"/>
                        </Border.Background>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="thumbBg" Storyboard.TargetProperty="Color" To="#38FFFFFF" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="thumbBg" Storyboard.TargetProperty="Color" To="#22FFFFFF" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="bg" Property="Background" Value="#44FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="VerticalScrollBarTemplate" TargetType="ScrollBar">
        <Grid Width="6">
            <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="0,2">
                <Track.Thumb>
                    <Thumb Style="{StaticResource SlimScrollBarThumb}"/>
                </Track.Thumb>
            </Track>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="HorizontalScrollBarTemplate" TargetType="ScrollBar">
        <Grid Height="6">
            <Track x:Name="PART_Track" Margin="2,0">
                <Track.Thumb>
                    <Thumb Style="{StaticResource SlimScrollBarThumb}"/>
                </Track.Thumb>
            </Track>
        </Grid>
    </ControlTemplate>

    <Style TargetType="ScrollBar">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="SnapsToDevicePixels"   Value="True"/>
        <Setter Property="Width"                 Value="6"/>
        <Setter Property="Template"              Value="{StaticResource VerticalScrollBarTemplate}"/>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width"    Value="Auto"/>
                <Setter Property="Height"   Value="6"/>
                <Setter Property="Template" Value="{StaticResource HorizontalScrollBarTemplate}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!--  TITLE BAR BUTTONS                                            -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <Style x:Key="TitleBarButtonStyle" TargetType="Button">
        <Setter Property="Width"           Value="46"/>
        <Setter Property="Height"          Value="32"/>
        <Setter Property="Background"      Value="Transparent"/>
        <Setter Property="Foreground"      Value="{StaticResource TextMutedBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#18FFFFFF"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#28FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E81123"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F1707A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
