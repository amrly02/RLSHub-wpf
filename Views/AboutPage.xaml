<UserControl x:Class="RLSHub.Wpf.Views.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,24,32,32">
        <StackPanel>
            <TextBlock Text="Resources &amp; links" Style="{StaticResource SectionHeaderTextStyle}" Margin="0,0,0,6"/>
            <TextBlock Text="Support the team, join the community, or explore the code." Style="{StaticResource HeroSubtitleTextStyle}" Margin="0,0,0,20"/>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource TileCardStyle}" MinHeight="240">
                    <StackPanel>
                        <TextBlock Text="Community" Style="{StaticResource CardTitleTextStyle}"/>
                        <TextBlock Text="Support on Patreon, chat on Discord" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,6,0,0"/>
                        <StackPanel Margin="0,14,0,0">
                            <Button Content="Raceless-RLS · Patreon" Style="{StaticResource GhostButtonStyle}" Click="OpenRacelessPatreon_Click" Margin="0,0,0,10"/>
                            <Button Content="RLS Vehicle Labs · Patreon" Style="{StaticResource GhostButtonStyle}" Click="OpenVehicleLabsPatreon_Click" Margin="0,0,0,10"/>
                            <Button Content="Raceless-RLS Career · Discord" Style="{StaticResource GhostButtonStyle}" Click="OpenDiscord_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource TileCardStyle}" MinHeight="240">
                    <StackPanel>
                        <TextBlock Text="Code &amp; Releases" Style="{StaticResource CardTitleTextStyle}"/>
                        <TextBlock Text="RLS-Modding on GitHub" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,6,0,0"/>
                        <StackPanel Margin="0,14,0,0">
                            <Button Content="RLS-Modding" Style="{StaticResource GhostButtonStyle}" Click="OpenGitHub_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
