<UserControl x:Class="RLSHub.Wpf.Views.CarSwapPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:RLSHub.Wpf.Models"
             Background="Transparent">
    <Grid>
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="36,16,36,32">
        <StackPanel>
            <!-- Bridge status card -->
            <Border Background="{StaticResource HeroControlBackgroundBrush}" BorderBrush="{StaticResource HeroControlBorderBrush}" BorderThickness="1" CornerRadius="14" Padding="16,12" Margin="0,0,0,12"
                    Opacity="0">
                <Border.RenderTransform><TranslateTransform Y="12"/></Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.35" EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="12" To="0" Duration="0:0:0.35" EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse x:Name="BridgeStatusDot" Width="8" Height="8" Fill="{StaticResource BridgeStoppedBrush}" Margin="0,0,10,0" VerticalAlignment="Center">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.4" Duration="0:0:1.2" EasingFunction="{StaticResource EaseInOut}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <TextBlock x:Name="BridgeStatusText" Grid.Column="1" Text="Bridge: not running" TextWrapping="Wrap" FontSize="13" VerticalAlignment="Center" Foreground="{StaticResource BridgeStoppedBrush}"/>
                        <Button x:Name="BridgeExpandButton" Grid.Column="2" Content="&#xE70D;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                Style="{StaticResource GhostButtonStyle}" Padding="4,0" Margin="10,0,0,0" VerticalAlignment="Center"
                                Click="BridgeExpandButton_Click" Visibility="Collapsed" ToolTip="Show bridge output"/>
                    </Grid>
                    <TextBlock x:Name="BridgeOutputText" Text="" Style="{StaticResource CardSubtitleTextStyle}" TextWrapping="Wrap" FontSize="12" MaxHeight="80" Margin="24,6,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Toolbar: actions -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Marketplace listings" Style="{StaticResource HeroSubtitleTextStyle}" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Update bridge" Style="{StaticResource GhostButtonStyle}" Click="UpdateBridge_Click"/>
                    <Button x:Name="RunStopBridgeButton" Content="Run bridge" Click="RunStopBridge_Click" Margin="10,0,0,0"/>
                    <Button Content="Refresh" Style="{StaticResource GhostButtonStyle}" Click="Refresh_Click" Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>

            <TextBlock x:Name="StatusText" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,0,8"/>

            <!-- Glass filter bar -->
            <Border Background="{StaticResource HeroControlBackgroundBrush}" BorderBrush="{StaticResource HeroControlBorderBrush}" BorderThickness="1" CornerRadius="14" Padding="16,10" Margin="0,0,0,16"
                    Opacity="0">
                <Border.RenderTransform><TranslateTransform Y="12"/></Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.08" Duration="0:0:0.35" EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="12" To="0" BeginTime="0:0:0.08" Duration="0:0:0.35" EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" Grid.Column="0" Style="{StaticResource TextBoxHeroStyle}" Margin="0,0,8,0" VerticalAlignment="Center"
                             ToolTip="Search by vehicle model, seller, title..."
                             TextChanged="SearchOrFilter_Changed"/>
                    <ComboBox x:Name="SortCombo" Grid.Column="1" Style="{StaticResource ComboBoxHeroStyle}" ItemContainerStyle="{StaticResource ComboBoxItemDarkStyle}" Width="140" Margin="0,0,8,0" VerticalAlignment="Center" SelectionChanged="SearchOrFilter_Changed"/>
                    <ComboBox x:Name="ShowFilterCombo" Grid.Column="2" Style="{StaticResource ComboBoxHeroStyle}" ItemContainerStyle="{StaticResource ComboBoxItemDarkStyle}" Width="100" Margin="0,0,8,0" VerticalAlignment="Center" SelectionChanged="SearchOrFilter_Changed"/>
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Price:" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{StaticResource HeroControlMutedBrush}" FontSize="12"/>
                        <TextBox x:Name="PriceMinBox" Width="70" Style="{StaticResource TextBoxHeroStyle}" Margin="0,0,4,0" ToolTip="Min price" TextChanged="SearchOrFilter_Changed"/>
                        <TextBlock Text="â€“" VerticalAlignment="Center" Foreground="{StaticResource HeroControlMutedBrush}"/>
                        <TextBox x:Name="PriceMaxBox" Width="70" Style="{StaticResource TextBoxHeroStyle}" Margin="4,0,0,0" ToolTip="Max price" TextChanged="SearchOrFilter_Changed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Listing cards with entrance animation -->
            <ItemsControl x:Name="ListingsItems" SizeChanged="ListingsItems_SizeChanged">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding GridColumns, RelativeSource={RelativeSource AncestorType=UserControl}}" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:CarSwapDisplayItem}">
                        <Border MinHeight="140" Margin="0,0,12,12" Opacity="0">
                            <Border.RenderTransform><TranslateTransform Y="14"/></Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="14" To="0" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Border Style="{StaticResource TileCardStyle}" MinHeight="140" MouseLeftButtonUp="ListingCard_Click" Cursor="Hand">
                            <StackPanel>
                                <Border Height="160" Margin="-20,-20,-20,12" CornerRadius="16,16,0,0" Background="#1A1A1A" ClipToBounds="True">
                                    <Grid>
                                        <TextBlock Text="ðŸš—" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                                        <Image Source="{Binding ThumbnailImage}" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    </Grid>
                                </Border>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Listing.Title}" Style="{StaticResource CardTitleTextStyle}" TextTrimming="CharacterEllipsis"/>
                                    <Button Grid.Column="1" Padding="4" Margin="0,-4,0,0" Click="ToggleWatchlist_Click" Tag="{Binding}" ToolTip="Toggle watchlist">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource GhostButtonStyle}">
                                                <Setter Property="Content" Value="&#xE734;"/>
                                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                                <Setter Property="FontSize" Value="16"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                        <Setter Property="Content" Value="&#xE735;"/>
                                                        <Setter Property="Foreground" Value="{StaticResource AccentSoftBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                                <TextBlock Text="{Binding Listing.Description}" Style="{StaticResource CardSubtitleTextStyle}" MaxHeight="36" TextTrimming="CharacterEllipsis" Margin="0,6,0,0"/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource CardSubtitleTextStyle}">
                                            <Run Text="Year: "/>
                                            <Run Text="{Binding Listing.YearDisplay, FallbackValue='â€”'}"/>
                                        </TextBlock>
                                        <TextBlock Style="{StaticResource CardSubtitleTextStyle}" Margin="0,2,0,0">
                                            <Run Text="Mileage: "/>
                                            <Run Text="{Binding Listing.MileageDisplay, FallbackValue='0'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Listing.PriceDisplay}" Style="{StaticResource CardTitleTextStyle}" Foreground="{StaticResource AccentSoftBrush}"/>
                                        <TextBlock Text="{Binding Listing.SellerDisplay}" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,2,0,0" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            </Border>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>

    <!-- Modal Overlay -->
    <Grid x:Name="ModalOverlay" Visibility="Collapsed" Background="#B2000000" MouseLeftButtonDown="ModalOverlay_Click">
        <Border x:Name="ModalContentBorder" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="16" Width="600" MaxHeight="700" VerticalAlignment="Center" HorizontalAlignment="Center" MouseLeftButtonDown="ModalContent_Click" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Close Button -->
                <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="16" Padding="8" Style="{StaticResource GhostButtonStyle}" Click="CloseModal_Click" Panel.ZIndex="1"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                    <StackPanel>
                        <!-- Image -->
                        <Border Height="300" CornerRadius="8" Background="#1A1A1A" ClipToBounds="True" Margin="0,0,0,20">
                            <Grid>
                                <TextBlock Text="ðŸš—" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.3"/>
                                <Image x:Name="ModalImage" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                
                                <!-- Photo Navigation Arrows -->
                                <Button x:Name="PrevPhotoButton" Content="&#xE76B;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0" Padding="12,8" FontSize="16" Style="{StaticResource GhostButtonStyle}" Background="#B2000000" Foreground="White" Click="PrevPhoto_Click" Visibility="Collapsed"/>
                                <Button x:Name="NextPhotoButton" Content="&#xE76C;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" Padding="12,8" FontSize="16" Style="{StaticResource GhostButtonStyle}" Background="#B2000000" Foreground="White" Click="NextPhoto_Click" Visibility="Collapsed"/>
                                
                                <!-- Photo Counter -->
                                <Border x:Name="PhotoCounterBorder" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,12" Background="#B2000000" CornerRadius="12" Padding="8,4" Visibility="Collapsed">
                                    <TextBlock x:Name="PhotoCounterText" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Title & Price -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ModalTitle" Style="{StaticResource CardTitleTextStyle}" FontSize="24" TextWrapping="Wrap"/>
                            <TextBlock x:Name="ModalPrice" Grid.Column="1" Style="{StaticResource CardTitleTextStyle}" FontSize="24" Foreground="{StaticResource AccentSoftBrush}" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Details Grid -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Year:" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,16,8"/>
                            <TextBlock x:Name="ModalYear" Grid.Row="0" Grid.Column="1" Style="{StaticResource CardTitleTextStyle}" FontSize="14" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mileage:" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,16,8"/>
                            <TextBlock x:Name="ModalMileage" Grid.Row="1" Grid.Column="1" Style="{StaticResource CardTitleTextStyle}" FontSize="14" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Condition:" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,16,8"/>
                            <TextBlock x:Name="ModalCondition" Grid.Row="2" Grid.Column="1" Style="{StaticResource CardTitleTextStyle}" FontSize="14" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Seller:" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,16,8"/>
                            <TextBlock x:Name="ModalSeller" Grid.Row="3" Grid.Column="1" Style="{StaticResource CardTitleTextStyle}" FontSize="14" Margin="0,0,0,8"/>
                        </Grid>

                        <!-- Description -->
                        <TextBlock Text="Description" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="ModalDescription" Style="{StaticResource CardTitleTextStyle}" FontSize="14" TextWrapping="Wrap" Opacity="0.8"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
    </Grid>
</UserControl>
