<Window x:Class="RLSHub.Wpf.Views.FirstRunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to RLS Hub"
        Width="440" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource ShellBackgroundBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Welcome to RLS Hub" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource HeroControlMutedBrush}" Margin="0,0,0,16"/>
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="BeamNgStatusText" TextWrapping="Wrap" Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,0,12"/>
            <TextBlock Text="CarSwap connects this app to the in-game marketplace. You can run the bridge from the CarSwap tab anytime." TextWrapping="Wrap" Foreground="{StaticResource HeroControlMutedBrush}" FontSize="13" Margin="0,0,0,16"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SetUpLaterButton" Content="Set up later" Style="{StaticResource GhostButtonStyle}" Click="SetUpLater_Click" Padding="20,10" Margin="0,0,10,0"/>
            <Button x:Name="RunBridgeButton" Content="Run bridge now" Click="RunBridge_Click" Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>
