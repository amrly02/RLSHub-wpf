<UserControl x:Class="RLSHub.Wpf.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
        <StackPanel>
            <Border Background="{StaticResource HeroGradientBrush}" CornerRadius="24" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="RLS Hub" Style="{StaticResource HeroTitleTextStyle}"/>
                    <TextBlock Text="Your command deck for the Career Overhaul experience." Style="{StaticResource HeroSubtitleTextStyle}" Margin="0,10,0,0"/>
                    <!-- Launch options in a single pill (fits the hero card) -->
                    <Border Background="{StaticResource HeroControlBackgroundBrush}" BorderBrush="{StaticResource HeroControlBorderBrush}" BorderThickness="1" CornerRadius="12" Padding="14,10" Margin="0,14,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Renderer" Foreground="{StaticResource HeroControlMutedBrush}" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="RendererCombo" Style="{StaticResource ComboBoxHeroStyle}" ItemContainerStyle="{StaticResource ComboBoxItemDarkStyle}" Width="110" VerticalAlignment="Center"/>
                            <Border Width="1" Background="{StaticResource HeroControlBorderBrush}" Margin="16,0" VerticalAlignment="Stretch"/>
                            <CheckBox x:Name="ConsoleCheckBox" Style="{StaticResource CheckBoxHeroStyle}" Content="Enable console" Margin="16,0,0,0" VerticalAlignment="Center"/>
                            <Border Width="1" Background="{StaticResource HeroControlBorderBrush}" Margin="16,0" VerticalAlignment="Stretch"/>
                            <CheckBox x:Name="AutoBridgeCheckBox" Style="{StaticResource CheckBoxHeroStyle}" Content="Auto-run CarSwap server" Margin="16,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                        <Button x:Name="LaunchButton" Content="Launch BeamNG" Click="LaunchButton_Click"/>
                        <Button x:Name="OpenUserFolderButton" Content="Open UserFolder" Style="{StaticResource GhostButtonStyle}" Click="OpenUserFolderButton_Click" Margin="12,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
