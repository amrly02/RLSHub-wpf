<UserControl x:Class="RLSHub.Wpf.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
        <StackPanel>
            <Border Style="{StaticResource TileCardStyle}">
                <StackPanel>
                    <TextBlock Text="Gameplay Toggles" Style="{StaticResource CardTitleTextStyle}" Margin="0,0,0,12"/>
                    <CheckBox x:Name="MapDevToggle" Content="Map Dev Mode" Foreground="{StaticResource TextPrimaryBrush}" Checked="Toggle_Changed" Unchecked="Toggle_Changed" Margin="0,0,0,8"/>
                    <TextBlock Text="Enable developer mode for map editing and testing." Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,0,16"/>

                    <CheckBox x:Name="NoPoliceToggle" Content="No Police Mode" Foreground="{StaticResource TextPrimaryBrush}" Checked="Toggle_Changed" Unchecked="Toggle_Changed" Margin="0,0,0,8"/>
                    <TextBlock Text="Disable police enforcement and traffic pursuits." Style="{StaticResource CardSubtitleTextStyle}" Margin="0,0,0,16"/>

                    <CheckBox x:Name="NoParkedToggle" Content="No Parked Mode" Foreground="{StaticResource TextPrimaryBrush}" Checked="Toggle_Changed" Unchecked="Toggle_Changed" Margin="0,0,0,8"/>
                    <TextBlock Text="Remove parked vehicles for cleaner environments." Style="{StaticResource CardSubtitleTextStyle}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
