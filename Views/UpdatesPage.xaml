<UserControl x:Class="RLSHub.Wpf.Views.UpdatesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="36,16,36,32">
        <StackPanel>
            <!-- RLSHub App card -->
            <Border Style="{StaticResource TileCardStaticStyle}" Padding="24" Margin="0,0,0,16" Opacity="0">
                <Border.RenderTransform><TranslateTransform Y="14"/></Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="14" To="0" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel>
                    <TextBlock Text="RLSHub App" Style="{StaticResource CardTitleTextStyle}"/>
                    <TextBlock x:Name="AppVersionText" Style="{StaticResource CardSubtitleTextStyle}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                    <TextBlock x:Name="AppUpdateStatusText" Style="{StaticResource CardSubtitleTextStyle}" TextWrapping="Wrap" Margin="0,4,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Mod card -->
            <Border Style="{StaticResource TileCardStaticStyle}" Padding="24" Margin="0,0,0,16" Opacity="0">
                <Border.RenderTransform><TranslateTransform Y="14"/></Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.06" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="14" To="0" BeginTime="0:0:0.06" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel>
                        <TextBlock Text="RLS Career Overhaul Mod" Style="{StaticResource CardTitleTextStyle}"/>
                    <TextBlock x:Name="ModVersionText" Style="{StaticResource CardSubtitleTextStyle}" TextWrapping="Wrap" Margin="0,6,0,0"/>
                    <TextBlock x:Name="ModUpdateStatusText" Style="{StaticResource CardSubtitleTextStyle}" TextWrapping="Wrap" Margin="0,4,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Action buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Opacity="0">
                <StackPanel.RenderTransform><TranslateTransform Y="14"/></StackPanel.RenderTransform>
                <StackPanel.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.12" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="14" To="0" BeginTime="0:0:0.12" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </StackPanel.Triggers>
                <Button x:Name="CheckUpdatesButton" Content="Check updates" Click="CheckUpdatesButton_Click"/>
                <Button x:Name="ViewAppReleasesButton" Content="RLSHub releases" Style="{StaticResource GhostButtonStyle}" Click="ViewAppReleasesButton_Click" Margin="12,0,0,0"/>
                <Button x:Name="ViewModReleasesButton" Content="Mod releases" Style="{StaticResource GhostButtonStyle}" Click="ViewModReleasesButton_Click" Margin="12,0,0,0"/>
            </StackPanel>

            <!-- Notification preferences card -->
            <Border Style="{StaticResource TileCardStaticStyle}" Padding="24" Opacity="0">
                <Border.RenderTransform><TranslateTransform Y="14"/></Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.18" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="14" To="0" BeginTime="0:0:0.18" Duration="0:0:0.4" EasingFunction="{StaticResource EaseOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel>
                    <CheckBox x:Name="NotifyWhenUpdateCheckBox" Style="{StaticResource CheckBoxDarkStyle}" Content="Notify when app or mod update is available" Checked="NotifyCheck_Changed" Unchecked="NotifyCheck_Changed" Margin="0,0,0,6"/>
                    <TextBlock Text="When enabled, the Updates tab will show a badge when a new version is available." Style="{StaticResource CardSubtitleTextStyle}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
